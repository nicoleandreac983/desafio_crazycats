<div class="row justify-content-center">
  <div class="col-md-10">
    <p style="color: green;"><%= notice %></p>

    <h1 class="text-center">Posts</h1>
    <%= link_to "New post", new_post_path, class: "btn btn-primary mb-4" %>

    <div id="posts">
      <% @posts.each do |post| %>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="card h-70">
              <div class="card-body">
                <%= render post %>
                <%= link_to "Show this post", post_path(post), class: "btn btn-success" %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <% images = [
              'gato1.png',
              'gato2.png',
              'gato3.png',
              'gato4.jpg',
              'gato5.jpg',
              'gato6.jpg'
            ] %>
            <% random_image = images.sample %>
            <div class="image-container">
              <%= image_tag(random_image, alt: 'noticias', class: 'image-centered') %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

